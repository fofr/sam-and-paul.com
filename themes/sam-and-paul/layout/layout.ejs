<!doctype html>
<html lang="en" id="sam-and-paul-com">
<head>
  <%- partial('_partial/head') %>
</head>
<body>
  <% backgroundBase = '/images/backgrounds/blurred/'; %>
  <% if (is_post()) { %>
    <% background = backgroundBase + page.slug.replace('/', '-') + '.jpg' %>
    <div class="blurred-background" style="background-image: url('<%= background %>');">
    </div>
  <% } else if (page.posts) { %>
    <%
      background = null;
      page.posts.each(function(i) {
        if (background === null &&
            (typeof i.page === "undefined" || i.page === 1)
           ) {
          background = backgroundBase + i.slug.replace('/', '-') + '.jpg'
        }
      });
    %>
    <div class="blurred-background" style="background-image: url('<%= background %>');">
    </div>
  <% } else { %>
    <div class="blurred-background" style="background-image: url('/images/backgrounds/blurred/kuching-borneo.jpg');">
    </div>
  <% } %>
  <%
   wrapperClass = "page-wrapper hfeed";
   if (is_home()) {
     wrapperClass += " home";
   }

   if (is_category()) {
     wrapperClass += " category-" + page.category;
   }
  %>
  <div class="<%= wrapperClass %>">
    <%- partial('_partial/header') %>
    <%- body %>
  </div>
  <%- partial('_partial/footer') %>
